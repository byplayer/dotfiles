# HHK like for think pad X1 Carbon
keymap Global
mod mod0 = Up
key *Up = &Ignore
key *PageUp = &Ignore
key *PageDown = &Ignore

key M0-J            => Home
key M0-M            => End
key M0-P            => Up
key M0-L            => Left
key *C-*S-M0-J      => *C-*S-Home
key *C-*S-M0-M      => *C-*S-End
key *C-*S-M0-P      => *C-*S-Up
key *C-*S-M0-L      => *C-*S-Left
key *S-M0-Semicolon  => *S-Right
key *C-*S-M0-FullStop => *C-*S-Down
# key *C-*S-M0-K      => *C-*S-PageUp
# key *C-*S-M0-Comma    => *C-*S-PageDown

# swap left win and alt
mod alt -= LeftAlt
mod alt += LeftWindows
key *LeftWindows = &Ignore
mod windows -= LeftWindows
mod windows += LeftAlt
key *LeftAlt = *LeftWindows
