defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8

escape ^x^x

autodetach on

startup_message off
vbell off

# caption always "%{= wg} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wb}%y/%m/%d(%D) %{=b wm}%c"
caption always "%{=r dd} %-w%{=b dd} %n %t %{-}%+w %="

# log config
logfile /home/yukgoto/.log/screen-%Y%m%d.%n.log
log on
deflog on

# emacs like keybind prefix version
# bind -c REGION o focus
# bind -c REGION 2 split
# bind -c REGION 3 split -v
# bind x command -c REGION

# emacs like keybind no prefix version
bind o focus
bind 2 split
bind 3 split -v

# startup screen
screen 0
split -v
focus
screen 1
focus
